        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InżynierkaBiblioteka"
        mc:Ignorable="d"
        Title="Aplikacja biblioteczna" Height="540" Width="960" Background="MediumPurple" ResizeMode="NoResize" WindowStyle="None">
    
    <Grid>
        <Border Background="DimGray" Height="20" VerticalAlignment="Top" MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <Grid>
                <Button x:Name="btnZamknij" Content=" X " Background="Black" Foreground="Gray" HorizontalAlignment="Right" Click="btnZamknij_Click"/>
                <TextBlock Text="Aplikacja biblioteczna" Foreground="White" HorizontalAlignment="Left"/>
            </Grid>
            
        </Border>
        <Frame x:Name="MainFrame" Margin="0,20,0,0" NavigationUIVisibility="Hidden">
            
        </Frame>
    </Grid>
</Window>
