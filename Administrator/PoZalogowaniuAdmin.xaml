<Page x:Class="InżynierkaBiblioteka.PoZalogowaniuAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InżynierkaBiblioteka"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="960"
      Title="Witaj Administratorze" Background="MediumPurple">

    <Grid>
        <Button x:Name="btnPowrot" Content="◀" FontSize="48" VerticalAlignment="Top" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" Click="btnPowrot_Click"/>
        <Button x:Name="btnWyszukajUzytkownika" Content=" Wyszukaj Uzytkownika " FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Background="Black" Click="btnWyszukajUzytkownika_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button x:Name="btnDodajKsiazke" Content=" Dodaj ksiazke " FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,150,0,0" Foreground="White" Background="Black" Click="btnDodajKsiazke_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button x:Name="btnZobaczReporty" Content=" ZobaczReporty " FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,300,0,0" Foreground="White" Background="Black" Click="btnZobaczReporty_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button x:Name="btnDodajZdjeciem" Content=" 📷 " FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnDodajZdjeciem_Click" Margin="600,315,0,0" Foreground="White" Background="Black">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btnOpcje" Content="⚙️" FontSize="48" VerticalAlignment="Top" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Click="btnOpcje_Click"/>
        <Button x:Name="btnZmienTryb" Content=" Zmien Tryb " FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Black" Foreground="White" Click="btnZmienTryb_Click" Margin="0,0,0,150">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Page>
