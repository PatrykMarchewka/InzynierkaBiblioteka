<Page x:Class="InżynierkaBiblioteka.Administrator.PokazRaport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InżynierkaBiblioteka.Administrator"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="960"
      Title="Zobacz zgloszenie" Background="MediumPurple">

    <Grid>
        <Button x:Name="btnPowrot" Content="◀" FontSize="48" VerticalAlignment="Top" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" Click="btnPowrot_Click"/>
        <Label Content="Reportujacy:" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="80,120,0,0"/>
        <Label Content="Reportowany:" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="80,200,0,0"/>
        <Label Content="Tresc recenzji:" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="80,270,0,0"/>
        <Label x:Name="lblReportujacy" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="700,120,0,0"/>
        <Label x:Name="lblReportowany" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="700,200,0,0"/>
        <TextBlock x:Name="txtBlockRecenzja" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left" TextWrapping="Wrap" Width="200" Margin="700,280,0,0"/>
        <Button x:Name="btnZbanujReportujacego" Content=" Zbanuj reportujacego " FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Background="Black" Margin="35,456,0,0" Click="btnZbanujReportujacego_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btnZbanujReportowanego" Content=" Zbanuj reportowanego " FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Background="Black" Margin="304,456,0,0" Click="btnZbanujReportowanego_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="btnUkryjRecenzje" Content=" Ukryj recenzje " FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Background="Black" Margin="591,456,0,0" Click="btnUkryjRecenzje_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button x:Name="btnNicNieRob" Content=" Brak akcji " FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Background="Black" Margin="783,456,0,0" Click="btnNicNieRob_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Page>
